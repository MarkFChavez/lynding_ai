<% content_for :title, "Lynding - Dashboard" %>

<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Loan Management Dashboard</h1>
    <p class="mt-2 text-sm text-gray-600">Overview of your lending portfolio</p>
  </div>

  <!-- Key Metrics -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
    <!-- Total Borrowed -->
    <div class="bg-white overflow-hidden border border-gray-200 rounded-lg hover:shadow-md transition-shadow">
      <div class="p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide truncate">Total Borrowed</dt>
              <dd class="mt-1 text-2xl font-semibold text-indigo-600"><%= format_php_currency(@total_borrowed) %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Profit -->
    <div class="bg-white overflow-hidden border border-gray-200 rounded-lg hover:shadow-md transition-shadow">
      <div class="p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide truncate">Total Profit</dt>
              <dd class="mt-1 text-2xl font-semibold text-indigo-600"><%= format_php_currency(@total_profit) %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Total Collected -->
    <div class="bg-white overflow-hidden border border-gray-200 rounded-lg hover:shadow-md transition-shadow">
      <div class="p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 8h6m-5 0a3 3 0 110 6H9l3 3m-3-6h6m6 1a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide truncate">Total Collected</dt>
              <dd class="mt-1 text-2xl font-semibold text-indigo-600"><%= format_php_currency(@total_collected) %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <!-- Outstanding Balance -->
    <div class="bg-white overflow-hidden border border-gray-200 rounded-lg hover:shadow-md transition-shadow">
      <div class="p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide truncate">Outstanding Balance</dt>
              <dd class="mt-1 text-2xl font-semibold text-indigo-600"><%= format_php_currency(@outstanding_balance) %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Secondary Stats -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-3 mb-8">
    <div class="bg-white overflow-hidden border border-gray-200 rounded-lg hover:shadow-md transition-shadow">
      <div class="px-6 py-5">
        <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide truncate">Active Loans</dt>
        <dd class="mt-2 text-3xl font-semibold text-slate-700"><%= @active_loans_count %></dd>
      </div>
    </div>

    <div class="bg-white overflow-hidden border border-gray-200 rounded-lg hover:shadow-md transition-shadow">
      <div class="px-6 py-5">
        <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide truncate">Total Loans</dt>
        <dd class="mt-2 text-3xl font-semibold text-slate-700"><%= @total_loans %></dd>
      </div>
    </div>

    <div class="bg-white overflow-hidden border border-gray-200 rounded-lg hover:shadow-md transition-shadow">
      <div class="px-6 py-5">
        <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide truncate">Total Borrowers</dt>
        <dd class="mt-2 text-3xl font-semibold text-slate-700"><%= @total_borrowers %></dd>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="relative">
    <!-- Floating Badge -->
    <div class="absolute -top-3 left-1/2 -translate-x-1/2 z-10">
      <div class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-gradient-to-r from-indigo-600 to-indigo-700 border border-indigo-500 rounded-full shadow-md">
        <svg class="h-3.5 w-3.5 text-indigo-200" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        <span class="text-sm font-semibold text-white tracking-wide">Quick Start</span>
      </div>
    </div>

    <!-- Quick Actions Container -->
    <div class="bg-gradient-to-br from-slate-50 to-indigo-50 border-2 border-indigo-100 rounded-lg shadow-md mb-8">
      <div class="px-6 py-8 sm:p-8">
        <div class="text-center mb-6">
          <p class="text-sm text-gray-600">Common tasks at your fingertips</p>
        </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3">
        <%= link_to new_loan_path, class: "group inline-flex items-center justify-center gap-2 px-5 py-3.5 border border-transparent text-sm font-semibold rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600 shadow-sm transition-all duration-200" do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span>New Loan</span>
        <% end %>
        <%= link_to new_borrower_path, class: "group inline-flex items-center justify-center gap-2 px-5 py-3.5 border border-transparent text-sm font-semibold rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600 shadow-sm transition-all duration-200" do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <span>New Borrower</span>
        <% end %>
        <%= link_to new_payment_path, class: "group inline-flex items-center justify-center gap-2 px-5 py-3.5 border border-transparent text-sm font-semibold rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600 shadow-sm transition-all duration-200" do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Record Payment</span>
        <% end %>
        <%= link_to loans_path, class: "group inline-flex items-center justify-center gap-2 px-5 py-3.5 border-2 border-indigo-300 text-sm font-semibold rounded-lg text-indigo-700 bg-white hover:bg-indigo-50 hover:border-indigo-400 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600 shadow-sm transition-all duration-200" do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <span>View All Loans</span>
        <% end %>
      </div>
    </div>
    </div>
  </div>

  <!-- Recent Loans -->
  <div class="bg-white border border-gray-200 rounded-lg">
    <div class="px-6 py-5 sm:p-6">
      <h3 class="text-base font-semibold leading-6 text-gray-900 mb-6">Recent Loans</h3>
      <% if @recent_loans.any? %>
        <div class="overflow-x-auto -mx-6 sm:-mx-6">
          <div class="inline-block min-w-full align-middle">
            <table class="min-w-full divide-y divide-gray-200">
              <thead>
                <tr>
                  <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Borrower</th>
                  <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                  <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Interest Rate</th>
                  <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Term</th>
                  <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                  <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Referral Agent</th>
                  <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @recent_loans.each do |loan| %>
                  <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= loan.borrower.name %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-indigo-600"><%= format_php_currency(loan.amount) %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= loan.interest_rate %>%</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= loan.term_months %> months</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-md <%= loan.status == 'active' ? 'bg-indigo-600 text-white' : loan.status == 'paid' ? 'bg-green-100 text-green-800 border border-green-200' : 'bg-red-100 text-red-800 border border-red-200' %>">
                        <%= loan.status.titleize %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= loan.referral_agent&.name || 'None' %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <%= link_to "View", loan, class: "text-slate-600 hover:text-slate-800 font-medium transition-colors" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No loans yet. Create your first loan to get started!</p>
      <% end %>
    </div>
  </div>
</div>

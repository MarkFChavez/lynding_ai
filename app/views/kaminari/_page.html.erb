<% if page.current? %>
  <span class="px-4 py-2 text-sm font-semibold text-white bg-indigo-600 rounded-md">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 hover:text-indigo-600 transition-colors", remote: remote %>
<% end %>

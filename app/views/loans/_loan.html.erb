<div id="<%= dom_id loan %>" class="flex-1 grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4">
  <div>
    <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Borrower</dt>
    <dd class="mt-1 text-sm font-medium text-gray-900"><%= loan.borrower&.name || loan.borrower_id %></dd>
  </div>
  <div>
    <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Amount</dt>
    <dd class="mt-1 text-sm font-semibold text-indigo-600"><%= format_php_currency(loan.amount) %></dd>
  </div>
  <div>
    <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Interest Rate</dt>
    <dd class="mt-1 text-sm text-gray-900"><%= loan.interest_rate %>%</dd>
  </div>
  <div>
    <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Term</dt>
    <dd class="mt-1 text-sm text-gray-900"><%= loan.term_months %> months</dd>
  </div>
  <div>
    <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Start Date</dt>
    <dd class="mt-1 text-sm text-gray-900"><%= loan.start_date.strftime("%B %d, %Y") rescue loan.start_date %></dd>
  </div>
  <div>
    <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Status</dt>
    <dd class="mt-1">
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-semibold <%= loan.status == 'active' ? 'bg-indigo-600 text-white' : loan.status == 'paid' ? 'bg-green-100 text-green-800 border border-green-200' : 'bg-red-100 text-red-800 border border-red-200' %>">
        <%= loan.status.titleize %>
      </span>
    </dd>
  </div>
  <div>
    <dt class="text-xs font-medium text-gray-500 uppercase tracking-wide">Referral Agent</dt>
    <dd class="mt-1 text-sm text-gray-900"><%= loan.referral_agent&.name || 'None' %></dd>
  </div>
</div>

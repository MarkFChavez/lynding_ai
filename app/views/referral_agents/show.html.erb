<% content_for :title, "Lynding - Referral Agent Details" %>

<div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
  <% if notice.present? %>
    <div class="mb-6 rounded-md bg-gray-50 border border-gray-200 p-4">
      <p class="text-sm text-gray-700 font-medium" id="notice"><%= notice %></p>
    </div>
  <% end %>

  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Referral Agent Details</h1>
    <p class="mt-2 text-sm text-gray-600">View and manage referral agent information</p>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg p-6 mb-6">
    <%= render @referral_agent %>
  </div>

  <div class="flex flex-col sm:flex-row gap-3">
    <%= link_to "Edit this referral agent", edit_referral_agent_path(@referral_agent), class: "inline-flex items-center justify-center rounded-md px-4 py-2.5 bg-gray-900 hover:bg-gray-800 text-white text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors" %>
    <%= link_to "Back to referral agents", referral_agents_path, class: "inline-flex items-center justify-center rounded-md px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-900 text-sm font-medium border border-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors" %>
    <%= button_to "Delete this referral agent", @referral_agent, method: :delete, form_class: "sm:inline-block", class: "w-full sm:w-auto inline-flex items-center justify-center rounded-md px-4 py-2.5 text-white bg-gray-800 hover:bg-gray-900 text-sm font-medium cursor-pointer transition-colors", data: { turbo_confirm: "Are you sure you want to delete this referral agent?" } %>
  </div>
</div>

<%= form_with(model: payment, class: "space-y-6") do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation" class="bg-gray-50 border border-gray-300 text-gray-900 px-4 py-3 rounded-md">
      <h3 class="text-sm font-semibold mb-2"><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h3>
      <ul class="list-disc ml-5 text-sm space-y-1">
        <% payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div class="sm:col-span-2">
      <%= form.label :loan_id, "Loan", class: "block text-sm font-medium text-gray-900 mb-2" %>
      <%= form.collection_select :loan_id, Loan.includes(:borrower).order('borrowers.name'), :id, ->(loan) { "#{loan.borrower.name} - â‚±#{number_with_precision(loan.amount, precision: 2, delimiter: ',')}" }, { prompt: 'Select a loan' }, class: ["block w-full rounded-md border px-3 py-2 text-gray-900 shadow-sm focus:ring-2 focus:ring-offset-0 transition-colors", {"border-gray-300 focus:border-indigo-600 focus:ring-indigo-600": payment.errors[:loan_id].none?, "border-gray-400 bg-gray-50": payment.errors[:loan_id].any?}] %>
    </div>

    <div>
      <%= form.label :amount, "Amount (PHP)", class: "block text-sm font-medium text-gray-900 mb-2" %>
      <%= form.text_field :amount, placeholder: "0.00", class: ["block w-full rounded-md border px-3 py-2 text-gray-900 shadow-sm focus:ring-2 focus:ring-offset-0 transition-colors", {"border-gray-300 focus:border-indigo-600 focus:ring-indigo-600": payment.errors[:amount].none?, "border-gray-400 bg-gray-50": payment.errors[:amount].any?}] %>
    </div>

    <div>
      <%= form.label :payment_date, class: "block text-sm font-medium text-gray-900 mb-2" %>
      <%= form.date_field :payment_date, class: ["block w-full rounded-md border px-3 py-2 text-gray-900 shadow-sm focus:ring-2 focus:ring-offset-0 transition-colors", {"border-gray-300 focus:border-indigo-600 focus:ring-indigo-600": payment.errors[:payment_date].none?, "border-gray-400 bg-gray-50": payment.errors[:payment_date].any?}] %>
    </div>

    <div class="sm:col-span-2">
      <%= form.label :notes, "Notes (Optional)", class: "block text-sm font-medium text-gray-900 mb-2" %>
      <%= form.text_area :notes, rows: 3, placeholder: "Add any additional notes about this payment...", class: ["block w-full rounded-md border px-3 py-2 text-gray-900 shadow-sm focus:ring-2 focus:ring-offset-0 transition-colors", {"border-gray-300 focus:border-indigo-600 focus:ring-indigo-600": payment.errors[:notes].none?, "border-gray-400 bg-gray-50": payment.errors[:notes].any?}] %>
    </div>
  </div>

  <div class="flex items-center gap-3 pt-4 border-t border-gray-200">
    <%= form.submit class: "inline-flex items-center justify-center rounded-md px-4 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600 cursor-pointer transition-colors" %>
  </div>
<% end %>

<% content_for :title, "Lynding - Payments" %>

<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <% if notice.present? %>
    <div class="mb-6 rounded-md bg-gray-50 border border-gray-200 p-4">
      <p class="text-sm text-gray-700 font-medium" id="notice"><%= notice %></p>
    </div>
  <% end %>

  <div class="mb-8 flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Payments</h1>
      <p class="mt-2 text-sm text-gray-600">Track and manage loan payments</p>
    </div>
    <%= link_to "New payment", new_payment_path, class: "mt-4 sm:mt-0 inline-flex items-center justify-center rounded-md px-4 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600 transition-colors" %>
  </div>

  <div id="payments" class="space-y-4">
    <% if @payments.any? %>
      <% @payments.each do |payment| %>
        <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
          <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
            <%= render payment %>
            <div class="flex flex-col sm:flex-row gap-2 lg:ml-6 flex-shrink-0">
              <%= link_to "View", payment, class: "text-center rounded-md px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 text-sm font-medium border border-slate-200 transition-colors" %>
              <%= link_to "Edit", edit_payment_path(payment), class: "text-center rounded-md px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 text-sm font-medium border border-slate-200 transition-colors" %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white border border-gray-200 rounded-lg p-12 text-center">
        <p class="text-gray-500">No payments found. Record your first payment to get started.</p>
        <%= link_to "Record Payment", new_payment_path, class: "mt-4 inline-flex items-center justify-center rounded-md px-4 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium transition-colors" %>
      </div>
    <% end %>
  </div>

  <div class="mt-6 flex justify-center">
    <%= paginate @payments %>
  </div>
</div>

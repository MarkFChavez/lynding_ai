<% content_for :title, "Lynding - Payment Details" %>

<div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
  <% if notice.present? %>
    <div class="mb-6 rounded-md bg-gray-50 border border-gray-200 p-4">
      <p class="text-sm text-gray-700 font-medium" id="notice"><%= notice %></p>
    </div>
  <% end %>

  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Payment Details</h1>
    <p class="mt-2 text-sm text-gray-600">View and manage payment information</p>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg p-6 mb-6">
    <%= render @payment %>
  </div>

  <!-- Applied to Installments Section -->
  <div class="bg-white border border-gray-200 rounded-lg p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Applied to Installments</h2>

    <% if @payment.installment_payments.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Installment</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wide">Due Date</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wide">Amount Applied</th>
              <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wide">Status</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @payment.installment_payments.includes(:installment).each do |ip| %>
              <tr>
                <td class="px-4 py-3 text-sm text-gray-900">#<%= ip.installment.installment_number %></td>
                <td class="px-4 py-3 text-sm text-gray-900"><%= ip.installment.due_date.strftime("%b %d, %Y") %></td>
                <td class="px-4 py-3 text-sm font-semibold text-indigo-600 text-right"><%= format_php_currency(ip.amount_applied) %></td>
                <td class="px-4 py-3 text-center">
                  <%= render partial: 'installments/status_badge', locals: { installment: ip.installment } %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot class="bg-gray-50">
            <tr>
              <td colspan="2" class="px-4 py-3 text-sm font-medium text-gray-900 text-right">Total Applied:</td>
              <td class="px-4 py-3 text-sm font-bold text-indigo-600 text-right"><%= format_php_currency(@payment.amount_applied) %></td>
              <td></td>
            </tr>
          </tfoot>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500 text-sm">This payment has not been applied to any installments yet.</p>
    <% end %>
  </div>

  <div class="flex flex-col sm:flex-row gap-3">
    <%= link_to "Edit this payment", edit_payment_path(@payment), class: "inline-flex items-center justify-center rounded-md px-4 py-2.5 bg-gray-900 hover:bg-gray-800 text-white text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors" %>
    <%= link_to "Back to payments", payments_path, class: "inline-flex items-center justify-center rounded-md px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-900 text-sm font-medium border border-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors" %>
    <%= button_to "Delete this payment", @payment, method: :delete, form_class: "sm:inline-block", class: "w-full sm:w-auto inline-flex items-center justify-center rounded-md px-4 py-2.5 text-white bg-gray-800 hover:bg-gray-900 text-sm font-medium cursor-pointer transition-colors", data: { turbo_confirm: "Are you sure you want to delete this payment?" } %>
  </div>
</div>

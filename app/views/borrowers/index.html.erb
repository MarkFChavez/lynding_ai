<% content_for :title, "Lynding - Borrowers" %>

<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <% if notice.present? %>
    <div class="mb-6 rounded-md bg-gray-50 border border-gray-200 p-4">
      <p class="text-sm text-gray-700 font-medium" id="notice"><%= notice %></p>
    </div>
  <% end %>

  <div class="mb-8 flex flex-col sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Borrowers</h1>
      <p class="mt-2 text-sm text-gray-600">Manage borrower information and contacts</p>
    </div>
    <%= link_to "New borrower", new_borrower_path, class: "mt-4 sm:mt-0 inline-flex items-center justify-center rounded-md px-4 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600 transition-colors" %>
  </div>

  <div id="borrowers" class="space-y-4">
    <% if @borrowers.any? %>
      <% @borrowers.each do |borrower| %>
        <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
          <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
            <%= render borrower %>
            <div class="flex flex-col sm:flex-row gap-2 lg:ml-6 flex-shrink-0">
              <%= link_to "View", borrower, class: "text-center rounded-md px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 text-sm font-medium border border-slate-200 transition-colors" %>
              <%= link_to "Edit", edit_borrower_path(borrower), class: "text-center rounded-md px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 text-sm font-medium border border-slate-200 transition-colors" %>
              <%= button_to "Delete", borrower, method: :delete, class: "rounded-md px-4 py-2 text-white bg-red-600 hover:bg-red-700 text-sm font-medium cursor-pointer transition-colors", data: { turbo_confirm: "Are you sure you want to delete this borrower?" } %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white border border-gray-200 rounded-lg p-12 text-center">
        <p class="text-gray-500">No borrowers found. Create your first borrower to get started.</p>
        <%= link_to "Create Borrower", new_borrower_path, class: "mt-4 inline-flex items-center justify-center rounded-md px-4 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium transition-colors" %>
      </div>
    <% end %>
  </div>
</div>

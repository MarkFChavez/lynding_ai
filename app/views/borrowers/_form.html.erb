<%= form_with(model: borrower, class: "space-y-6") do |form| %>
  <% if borrower.errors.any? %>
    <div id="error_explanation" class="bg-gray-50 border border-gray-300 text-gray-900 px-4 py-3 rounded-md">
      <h3 class="text-sm font-semibold mb-2"><%= pluralize(borrower.errors.count, "error") %> prohibited this borrower from being saved:</h3>
      <ul class="list-disc ml-5 text-sm space-y-1">
        <% borrower.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-900 mb-2" %>
      <%= form.text_field :name, placeholder: "John Doe", class: ["block w-full rounded-md border px-3 py-2 text-gray-900 shadow-sm focus:ring-2 focus:ring-offset-0 transition-colors", {"border-gray-300 focus:border-indigo-600 focus:ring-indigo-600": borrower.errors[:name].none?, "border-gray-400 bg-gray-50": borrower.errors[:name].any?}] %>
    </div>

    <div>
      <%= form.label :email, class: "block text-sm font-medium text-gray-900 mb-2" %>
      <%= form.text_field :email, placeholder: "john@example.com", class: ["block w-full rounded-md border px-3 py-2 text-gray-900 shadow-sm focus:ring-2 focus:ring-offset-0 transition-colors", {"border-gray-300 focus:border-indigo-600 focus:ring-indigo-600": borrower.errors[:email].none?, "border-gray-400 bg-gray-50": borrower.errors[:email].any?}] %>
    </div>

    <div class="sm:col-span-2">
      <%= form.label :phone, class: "block text-sm font-medium text-gray-900 mb-2" %>
      <%= form.text_field :phone, placeholder: "(555) 123-4567", class: ["block w-full sm:w-auto rounded-md border px-3 py-2 text-gray-900 shadow-sm focus:ring-2 focus:ring-offset-0 transition-colors", {"border-gray-300 focus:border-indigo-600 focus:ring-indigo-600": borrower.errors[:phone].none?, "border-gray-400 bg-gray-50": borrower.errors[:phone].any?}] %>
    </div>

    <div class="sm:col-span-2">
      <%= form.label :address, class: "block text-sm font-medium text-gray-900 mb-2" %>
      <%= form.text_area :address, rows: 3, placeholder: "123 Main St, City, State 12345", class: ["block w-full rounded-md border px-3 py-2 text-gray-900 shadow-sm focus:ring-2 focus:ring-offset-0 transition-colors", {"border-gray-300 focus:border-indigo-600 focus:ring-indigo-600": borrower.errors[:address].none?, "border-gray-400 bg-gray-50": borrower.errors[:address].any?}] %>
    </div>
  </div>

  <div class="flex items-center gap-3 pt-4 border-t border-gray-200">
    <%= form.submit class: "inline-flex items-center justify-center rounded-md px-4 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600 cursor-pointer transition-colors" %>
  </div>
<% end %>

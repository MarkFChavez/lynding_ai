<% content_for :title, "Lynding - Edit Borrower" %>

<div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Edit Borrower</h1>
    <p class="mt-2 text-sm text-gray-600">Update the borrower details</p>
  </div>

  <div class="bg-white border border-gray-200 rounded-lg p-6 mb-6">
    <%= render "form", borrower: @borrower %>
  </div>

  <div class="flex flex-col sm:flex-row gap-3">
    <%= link_to "Show this borrower", @borrower, class: "inline-flex items-center justify-center rounded-md px-4 py-2.5 bg-gray-900 hover:bg-gray-800 text-white text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors" %>
    <%= link_to "Back to borrowers", borrowers_path, class: "inline-flex items-center justify-center rounded-md px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-900 text-sm font-medium border border-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors" %>
  </div>
</div>
